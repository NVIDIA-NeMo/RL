{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":dependencyDashboard"
  ],
  "schedule": [
    "after 9am and before 5pm every weekday"
  ],
  "timezone": "America/Los_Angeles",
  "prConcurrentLimit": 1,
  "prHourlyLimit": 1,
  "semanticCommits": "disabled",
  "commitMessagePrefix": "[Renovate]",
  "branchPrefix": "renovate/",
  "labels": [
    "dependencies",
    "CI:L2"
  ],
  "assignees": [],
  "reviewers": [],
  "allowedCommands": [
    "^\\.github/scripts/renovate_post_update\\.sh$"
  ],
  "postUpgradeTasks": {
    "commands": [
      ".github/scripts/renovate_post_update.sh"
    ],
    "fileFilters": [
      "uv.lock",
      "3rdparty/**/setup.py"
    ],
    "executionMode": "update"
  },
  "packageRules": [
    {
      "description": "Group all updates together into a single PR",
      "matchManagers": [
        "git-submodules",
        "pep621"
      ],
      "groupName": "all dependencies",
      "additionalBranchPrefix": "all-deps-",
      "schedule": [
        "at any time"
      ]
    }
  ],
  "git-submodules": {
    "enabled": true
  },
  "pep621": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": false
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "CI:L2"
    ]
  },
  "osvVulnerabilityAlerts": true,
  "rangeStrategy": "bump",
  "onboarding": false,
  "requireConfig": "optional",
  "platformAutomerge": false,
  "rebaseWhen": "behind-base-branch",
  "forkProcessing": "enabled"
}
